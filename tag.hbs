{{!< default}}

{{#tag}}
<header class="gh-hero">
    {{#if feature_image}}
        <img class="gh-hero-img" src="{{feature_image}}" alt="{{name}}" />
    {{/if}}
    <div class="gh-hero-content">
        <h1>{{name}}</h1>
        <p>
            {{#if description}}
                {{description}}
            {{else}}
                A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
            {{/if}}
        </p>
    </div>
</header>
{{/tag}}

<div class="gh-page">
    <div class="gh-container">

        <div class="gh-postfeed">
        {{#foreach posts}}

            {{> "card"}} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

    </div>
</div>