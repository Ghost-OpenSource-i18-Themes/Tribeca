{{!< default}}

<header class="gh-hero">
    {{#if @site.cover_image}}
        <img class="gh-hero-img" src="{{@site.cover_image}}" alt="{{@site.title}}" />
    {{/if}}
    <div class="gh-hero-content">
        <h1>{{@site.description}}</h1>
    </div>
</header>

<div class="gh-page">
    <div class="gh-container">

        <div class="gh-postfeed">
        {{#foreach posts}}

            {{> "card"}} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

    </div>
</div>

